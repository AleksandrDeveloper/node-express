<h1>Edit</h1>
<form action="/courses/edit" method="post">
    <div class="input-field col s6">
        <input  id="title" name="title" type="text" class="validate" required value='{{course.title}}'>
         <span class="helper-text" data-error="title" data-success="right"></span>
    </div>
    <div class="input-field col s6">
        <input  id="price" name="price" type="number" class="validate" required value='{{course.price}}' >
         <span class="helper-text" data-error="price" data-success="right"></span>
    </div> 
     <div class="input-field col s6">
        <input  id="url" name="img" type="text" class="validate" required value='{{course.img}}'>
         <span class="helper-text" data-error="url" data-success="right"></span>
    </div>
    <input type="text" name="id" hidden value='{{course.id}}'>

    <button type="submit">Add course</button>
</form>