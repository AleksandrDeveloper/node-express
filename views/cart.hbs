<div class="cart">
    <h1>Cart </h1>

{{#if course.length}}
<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Количетво</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        {{#each course}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-primary js-btn" data-id='{{_id}}'>Delit</button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<p>Price: {{price}}</p>
<form action="/order" method="post">
    <button type="submit" class="btn">Do order</button>
</form>
{{else}}
<p>Cart is pysta</p> 
{{/if}}
</div>