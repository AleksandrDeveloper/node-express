<h1>{{subTitle}}</h1>
<form action="/add" method="post">
    <div class="input-field col s6">
        <input  id="title" name="title" type="text" class="validate">
         <span class="helper-text" data-error="title" data-success="right"></span>
    </div>
    <div class="input-field col s6">
        <input  id="price" name="price" type="number" class="validate">
         <span class="helper-text" data-error="price" data-success="right"></span>
    </div> 
     <div class="input-field col s6">
        <input  id="url" name="img" type="text" class="validate">
         <span class="helper-text" data-error="url" data-success="right"></span>
    </div>

    <button type="submit">Add course</button>
</form>